<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.fullthrottle">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterActivity">
            <action android:name="android.intent.action.MAIN" />
        </activity>
        <activity android:name=".RideInputActivity">
            <action android:name="android.intent.action.MAIN" />
        </activity>
        <activity android:name=".EventActivity" />
        <activity
            android:name=".Your_rides_activity"
            android:label="@string/title_activity_your_rides_activity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Joined_rides_Activtiy"
            android:label="@string/title_activity_joined_rides__activtiy"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>